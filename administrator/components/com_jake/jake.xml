<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
	<name>Jake</name>
	<creationDate>September 2012</creationDate>
	<author>Rolf Kaiser</author>
	<authorUrl>http://blog.echothis.com</authorUrl>
	<license>http://creativecommons.org/licenses/by/3.0/ Creative Commons Attribution</license>
	<version>2.0.0</version>
	<description><![CDATA[
		<h1>Jake: Joomla-CakePHP Bridge</h1>
		<p>
	  Jake is a Joomla component that allows CakePHP applications to be hosted within a Joomla website. With Jake you have a bridge to your applications that requires no modifications on your CakePHP code. Your application can run with or without Jake.   This project was originally created by Mariano Iglesias (mariano@cricava.com).
	  </p>
	  <h2>Quick Setup</h2>
	  <p>
	  Go to <a href="index.php?option=com_jake&task=documentation">Jake documentation</a> and follow instructions.
	  </p>
	]]></description>
  
	<files folder="site">
  		<filename>lib/bootstrap.php</filename>
		<filename>lib/cake_embedded_dispatcher.class.php</filename>
		<filename>lib/constants.php</filename>
		<filename>lib/jake_component.class.php</filename>
		<filename>lib/jake.class.php</filename>
		<filename>views/send/tmpl/default.php</filename>
		<filename>views/send/view.html.php</filename>
		<filename>jake_front_component.class.php</filename>
		<filename>jake_front_controller.class.php</filename>
		<filename>jake.html.php</filename>
		<filename>jake.ini</filename>
		<filename>jake.php</filename>
	</files>
	
	<administration>
		<menu img="components/com_jake/images/jake.png">Jake</menu>
		<submenu>
			<menu view="admin_send" img="components/com_jake/images/jake.png" link="option=com_jake&amp;task=documentation">Jake Documentation</menu>
			<menu view="admin_send" img="components/com_jake/images/jake.png" link="option=com_jake&amp;task=form">Get Jake URL for CakePHP action</menu>
		</submenu>
		
		<files folder="admin">
			<filename>images/jake.png</filename>
			<filename>views/admin_send/tmpl/default.php</filename>
			<filename>views/admin_send/view.html.php</filename>
			<filename>admin.jake.html.php</filename>
			<filename>admin.jake.php</filename>
			<filename>jake_admin_component.class.php</filename>
			<filename>jake_admin_controller.class.php</filename>
		</files>
		
		<media folder="." destination="com_jake/images">
			<filename>images/jake.png</filename>
		</media>
	</administration>
</extension>